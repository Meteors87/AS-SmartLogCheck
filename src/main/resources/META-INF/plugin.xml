<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.meteors87.assmartlogcheck</id>
    <name>AS-SmartLogCheck</name>
    <vendor>meteors87</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.meteors87.assmartlogcheck.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
        <postStartupActivity implementation="com.github.meteors87.assmartlogcheck.startup.MyProjectActivity" />
    </extensions>

    <!-- 操作（菜单项/快捷键） -->
    <actions>
        <!-- 可选：添加一个菜单项来打开面板 -->
        <action id="MySidePanel.Open"
                class="com.github.meteors87.assmartlogcheck.toolWindow.ReadLogcatAction"
                text="Open My Side Panel"
                description="Open the side panel">
            <add-to-group group-id="ViewMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift M"/>
        </action>
    </actions>
</idea-plugin>
